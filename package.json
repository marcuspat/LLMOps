{
  "name": "turbo-flow-claude-integration",
  "version": "1.0.0",
  "description": "Turbo Flow with Claude-Flow Integration and Collaborative Development System",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:collab": "tsx watch src/index-collab.ts",
    "start": "node dist/index.js",
    "start:optimized": "node -r tsx/cjs src/api/optimized-server.ts",
    "start:cluster": "NODE_ENV=production WORKER_COUNT=8 node -r tsx/cjs src/api/optimized-server.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=integration",
    "test:collaboration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=collaboration",
    "test:e2e": "playwright test",
    "test:performance": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=performance",
    "test:security": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=security",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --watchAll=false --ci && playwright test --config=playwright.ci.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security",
    "test:collab-all": "npm run test:collaboration && npm run test:unit && npm run test:integration",
    "test:load": "node scripts/load-test.js",
    "test:load:production": "node scripts/load-test.js --production --users=1000 --duration=120",
    "lint": "eslint src --ext .ts,.tsx && prettier --check src",
    "lint:fix": "eslint src --ext .ts,.tsx --fix && prettier --write src",
    "typecheck": "tsc --noEmit",
    "coverage:report": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage && coverage-summary-coverage",
    "playwright": "playwright test",
    "playwright:install": "playwright install",
    "playwright:debug": "playwright test --debug",
    "performance:monitor": "node scripts/monitor-performance.js",
    "memory:check": "node scripts/memory-check.js"
  },
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "@types/helmet": "^0.0.48",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "framer-motion": "^12.23.24",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "redis": "^5.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "jest": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.1.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
